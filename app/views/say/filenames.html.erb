<% provide(:title, "Files in the current directory") %>

	<div class="panel panel-default">

		<div class="panel-heading">
			<h3 class="panel-title">
			    It is now
				<%=@time%>
			</h3>
		</div>

		<div class="panel-body">
            <ul>    
                <% for file in @files %>
                <li><%= file; %></li>
                <% end %>
            </ul>
            <p>
                Say <%= link_to "Hello", say_hello_path %> again.
            </p>
		</div>

	</div>